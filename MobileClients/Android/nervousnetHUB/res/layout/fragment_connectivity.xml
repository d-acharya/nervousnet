<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.ethz.coss.nervousnet.hub.ui.fragments.ConnectivityFragment" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Status : " />

                <TextView
                    android:id="@+id/sensor_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Sensor Status comes here" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Information" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Connected : " />

                <TextView
                    android:id="@+id/isConnectedTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint=" is Connected or not." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Network Type : " />

                <TextView
                    android:id="@+id/netwType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint=" Wifi or Cellular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Roaming Status : " />

                <TextView
                    android:id="@+id/isRoaming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint=" Home or Away" />
            </LinearLayout>
            <ch.ethz.coss.nervousnet.hub.ui.view.ConnectivitySensorView
			        android:id="@+id/connectVizView"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent" />
            
        	</LinearLayout>
        	
        
        
    </ScrollView>

</LinearLayout>